<h1>Listing albums</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Album</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Purchase</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.image_url %></td>
        <td><%= album.album %></td>
        <td><%= album.artist %></td>
        <td><%= album.year %></td>
        <td><%= album.purchase %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

